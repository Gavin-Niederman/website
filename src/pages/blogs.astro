---
import BlogPost from "../components/BlogPost.astro";
import Content from "../components/Content.astro";
import Page from "../layouts/Page.astro";

const posts = await Astro.glob("../pages/blogs/*.md");
---

<Page title="Gavin - Blogs">
    <Content class="blogs-list">
        <h1>Blog Posts</h1>
        <ul class="list">
            {
                posts.map((post) => (
                    <li>
                        <BlogPost blog={post} />
                    </li>
                ))
            }
        </ul>
    </Content>
</Page>

<style lang="scss">
    @import "../styles/theme.scss";

    .desc {
        flex-grow: 1;
    }

    .blogs-list {
        flex-grow: 2;
    }

    .list {
        list-style: none;
        padding: 0;
        margin: 0;

        li:not(:last-child) {
            padding-bottom: 20px;
        }
    }
</style>
